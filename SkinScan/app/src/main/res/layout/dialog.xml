<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_dialog"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/pg_dialog"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/card_dialog"
        app:layout_constraintEnd_toEndOf="@+id/card_dialog"
        app:layout_constraintStart_toStartOf="@+id/card_dialog"
        app:layout_constraintTop_toTopOf="@+id/card_dialog"
        app:layout_constraintVertical_bias="0.24000001" />

    <TextView
        android:id="@+id/pg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/card_dialog"
        app:layout_constraintEnd_toEndOf="@+id/card_dialog"
        app:layout_constraintStart_toStartOf="@+id/card_dialog"
        app:layout_constraintTop_toBottomOf="@+id/pg_dialog" />

</androidx.constraintlayout.widget.ConstraintLayout>